# Ollama API Server Configuration
# Copy this file to .env and update with your values

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false

# ============================================================================
# Ollama Backend Servers
# ============================================================================
# Comma-separated list of Ollama server URLs
# Example: http://192.168.1.101:11434,http://192.168.1.102:11434
OLLAMA_SERVERS=http://localhost:11434

# ============================================================================
# Database Configuration
# ============================================================================
# SQLite database (default, no setup needed)
DATABASE_URL=sqlite+aiosqlite:///./ollama_api.db

# ============================================================================
# Security Configuration
# ============================================================================
# Generate a secure secret key with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# ============================================================================
# Rate Limiting
# ============================================================================
DEFAULT_RATE_LIMIT=1000
RATE_LIMIT_WINDOW=3600

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=/var/log/ollama-api/server.log

# ============================================================================
# Monitoring Configuration
# ============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
